<div class="container">
  <div class="row">
	<%= render partial: "top/sidebar" %>
    <div class="col-xs-10">


      <!-- 上部リンク -->
      <div clas="link-top", style="margin: 20px; text-decoration: underline;">
        <span class="nav-list-item">
          <%= link_to "前のページに戻る", :back %>
        </span>
        <span class="nav-list-item", style="float: right; text-decoration: underline;">
          <%= link_to "TOP画面に戻る", root_path %>
        </span>
      </div>


      <h1 class="midashi">お気に入り一覧</h1>
      <hr>

	    <table class = "table table table-hover">
		  <tbody>
		  <% @favorites.each do |favorite| %>
		    <% product = Product.find(favorite.product_id) %>
		    <tr>
			  <td width="100", height="100">
			    <%= attachment_image_tag product, :picture, width: "100", height: "100", format: "jpeg", fallback: "img/no_image.jpg" %></td>
              <td>
				<label>CDタイトル: </label><%= link_to product.cd_title, product_path(product) %><br>
                <label>アーティスト: </label><%= product.artist %>
			  </td>

			  <td>￥<%= number_with_delimiter(product.price) %></td>
			  <td>

                     <button type="button" class="btn btn-danger" ><%= link_to "削除", favorite_path(favorite),
                      method: :delete  %></button>
		      </td>
			</tr>
		  <% end %>

		</tbody>
	  </table>
	</div>
  </div>
</div>


<style type="text/css">
		<!--
		button a{color: #fff; font-size: 16px;}
		.sort{display: inline-block; margin:20px 0 10px 0;}
		-->
</style>

<!-- 下部スライダー -->
<%= render 'top/browsing', commites: @commites, product: @product %>
