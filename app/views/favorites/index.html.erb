<div class="container">
  <div class="row">
	<%= render partial: "top/sidebar" %>
    <div class="col-xs-10">
      <h1 style="display: inline-block;">お気に入り一覧</h1>


	    <table class = "table">
		  <tbody>
		  <% @favorites.each do |favorite| %>
		    <% product = Product.find(favorite.product_id) %>
		    <tr>
			  <td width="100", height="100">
			    <%= attachment_image_tag product, :picture, width: "100", height: "100", format: "jpeg", fallback: "img/no_image.jpg" %></td>
              <td>
				<label>CDタイトル: </label><%= link_to product.cd_title, product_path(product) %><br>
                <label>アーティスト: </label><%= product.artist %>
			  </td>

			  <td>￥<%= product.price %></td>
			  <td>

                     <button type="button" class="btn btn-danger" ><%= link_to "削除", favorite_path(favorite),
                      method: :delete  %></button>
		      </td>
			</tr>
		  <% end %>

		</tbody>
	  </table>
	</div>
  </div>
</div>


