<div class="row">
<%= render 'top/sidebar' %>
  <div class="col-xs-10 text-left">
    <div class="midashi">会員情報の編集</div>
    <hr>
	    <%= form_for(@user) do |f| %>
		  <table class="table">
			<tbody>
			  <tr>
				<th>氏名</th>
				<td>姓<%= f.text_field :name_sei, placeholder:"例）渋谷" %>名<%= f.text_field :name_mei, placeholder:"例）太郎" %></td>
			  </tr>
			  <tr>
				<th>フリガナ</th>
				<td>セイ<%= f.text_field :name_kana_sei, placeholder:"例）シブヤ" %>メイ<%= f.text_field :name_kana_mei, placeholder:"例）タロウ" %></td>
			  </tr>
			  <tr>
				<th>生年月日</th>
				<td><%= f.date_field :birthday %></td>
			  </tr>
			  <tr>
				<th>性別</th>
				<td>男性<%= f.radio_button :sex, "male" %>
					女性<%= f.radio_button :sex, "female" %>
				</td>
			  </tr>
			  <tr>
				<th>郵便番号</th>
				<td><%= f.text_field :postal_code, placeholder:"例）1235678" %></td>
			  </tr>
			  <tr>
				<th>都道府県</th>
				<td><%= f.text_field :region, :size=>"30", placeholder:"例）東京都" %></td>
			  </tr>
			  <tr>
				<th>市区町村以下</th>
				<td><%= f.text_field :street, :size=>"60", placeholder:"例）港区麻布１−２−３タワーマンション２０１" %></td>
			  </tr>
			  <tr>
				<th>電話番号</th>
				<td><%= f.text_field :phone, :size=>"60", placeholder:"例）09012345678"  %></td>
			  </tr>
			  <tr>
				<th>メールアドレス</th>
				<td><%= f.email_field :email, :size=>"60", placeholder:"例）abc@volcano.ne.jp"  %></td>
			  </tr>
						<!-- password -->
			  <!-- <tr>
				<th width="150" height="70">クレジットカード</th>
				<td><%= f.text_field :credit_card %></td>
			  </tr> -->
			</tbody>
		  </table>
		<div class="button1">
		<%= f.submit "編集", class:"btn btn-md btn-block btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
