<%= render 'top/sidebar' %>

<div class="container">
	<div class="row">
		<div class="col">
  		<h2>商品新規登録</h2>
        <%= form_for(@product, url: admins_products_path) do |f| %>
          <div class="col">
            <%= f.text_field :artist, :placeholder => "アーティスト名" %>
          </div>
          <div class="col">
            <%= f.text_field :cd_title, :placeholder => "シングル/アルバム名" %>
          </div>
          <div>
          	<h6>ジャケット画像</h6>
          	<%= f.attachment_field :picture %>
          </div>
		  <div class="col">
            <%= f.text_field :label, :placeholder => "レーベル名" %>
          </div>
          <div class="col">
            <%= f.select :genre, [["J-POP", "J-POP"], ["ロック＆ポップス", "ロック＆ポップス"], ["R＆B/ソウル", "R＆B/ソウル"], ["ヒップホップ", "ヒップホップ"], ["クラブ/ダンス", "クラブ/ダンス"], ["ワールド", "ワールド"], ["洋楽", "洋楽"], ["アニメ", "アニメ"]] %>
          </div>
          <div class="col">
            <%= f.text_field :price, :placeholder => "値段" %>
          </div>
          <div class="col">
            <%= f.text_field :start_date, :placeholder => "発売日" %>
          </div>
          <div class="col">
            	<%= fields_for(@disc) do |disc| %>
            		<%= disc.text_field :disc_name, :placeholder => "ディスク名" %><br>

				  <%= fields_for(@tune) do |tune| %>
            		<%= tune.text_field :song_title, :placeholder => "曲名" %><br>
            	  <% end %>
            	<% end %>
          </div>

          <!-- <div class="col">音楽データ
            <%= f.text_area :sound_source, :placeholder => "1. 2. 3." %>
          </div> -->
          <div class="col">
            <%= f.submit '登録',class: "btn btn-primary" %>
        　</div>
        <% end %>
    </div>
</div>