<div class="container">
	<div class="row">
		<%= render partial: "top/sidebar" %>
		<div class="col-xs-10">

<!-- 上部リンク -->
      <div clas="link-top", style="margin: 20px; text-decoration: underline;">
        <span class="nav-list-item">
          <%= link_to "前のページに戻る", :back %>
        </span>
        <span class="nav-list-item", style="float: right; text-decoration: underline;">
          <%= link_to "TOP画面に戻る", root_path %>
        </span>
      </div>


			<h1 class="midashi">商品一覧</h1>
			<hr>

			<!--並び替え機能-->
			<div class="pull-right sort", style="margin: 0 0 0 60px; background-color: rgba( 0, 0, 0, 0.1);">
				Search Sort <span class="glyphicon glyphicon-search"></span>:
                <button type="button" class="btn btn-link">
                    <%= sort_link(@search, :cd_title, "追加日で並び替え") %>
                </button>
                <button type="button" class="btn btn-link">
                    <%= sort_link(@search, :price, "価格で並び替え") %>
                </button>
				<button type="button" class="btn btn-link">
                    <%= sort_link(@search, :start_date, "発売日で並び替え") %>
                </button>
			</div>


			<table class = "table">
				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td width="100", height="100">
							<%= attachment_image_tag product, :picture, width: "100", height: "100", format: "jpeg", fallback: "img/no_image.jpg" %></td>

							<td>
							<label>CDタイトル: </label><%= link_to product.cd_title, admins_product_path(product) %><br>

							<label>アーティスト: </label><%= product.artist %>
						</td>

						<td>￥<%= product.price %></td>

						<td>
							<span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span><br>
							お気に入りに追加
						</td>
						<td>
							<%= link_to '編集', edit_admins_product_path(product.id) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


<style type="text/css">
		<!--
		button a{color: black; font-size: 15px;}
		.sort{display: inline-block; margin:20px 0 10px 0;}
		-->
</style>