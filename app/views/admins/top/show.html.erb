<div class="container">
  <div class="row">
	<%= render partial: "top/sidebar" %>
	<div class="main col-xs-10">
	  <h1 class="midashi", style="margin-bottom:40px;">管理者メニュー</h1>
	  <hr>

	 <div class="row">
	  <div class="col-md-6", style="margin-top:0px; margin-bottom:0px;">
	    <h2 style="text-align: center;">１．商品管理</h2>
		<%= link_to '新規商品登録', new_admins_product_path,  class: "btn btn-md btn-default btn-block" %>
        <%= link_to '商品の編集/一覧', admins_products_path, class: "btn btn-md btn-default btn-block" %>
	  </div>

	  <div class="col-md-6", style="margin-top:0px; margin-bottom:50px;">
		<h2 style="text-align: center;">２．受注管理</h2>
        <%= link_to '注文一覧・配送状況', admins_purchasers_path, class: "btn btn-md btn-default btn-block" %>
	  </div>
	</div>

	<div class="row">
	  <div class="col-md-6", style="margin-top:20px; margin-bottom:20px;">
	    <h2 style="text-align: center;">３．会員情報管理</h2>
        <%= link_to '会員情報の編集/一覧', admins_users_path, class: "btn btn-md btn-default btn-block" %>
	  </div>

	  <div class="col-md-6", style="margin-top:20px; margin-bottom:20px;">
		<h2 style="text-align: center;">４．その他</h2>
		<%= link_to 'お問い合わせ管理', admins_contacts_path, class: "btn btn-md btn-default btn-block" %>
		<%= link_to '会員Topページへ', root_path, class: "btn btn-md btn-default btn-block" %>
	  </div>
	</div>

	  <div style="margin-top: 50px;">
	  	<h2 class="text-center">新規受注履歴一覧</h2>
	  	<table class="table table-bordered">
	  		<thead>
	  			<tr class="info">
	  				<td>購入日</td><td colspan= 2>注文商品</td><td>購入ユーザー</td><td>発送状況</td>
	  			</tr>
	  		</thead>
	  		<tbody>
	  			<% @new_purchasers.zip(@total, @product_first, @user_name).each do |purchase, quantity, first, namae| %>
	  			<tr class="active">
	  				<td>
	  					<%= link_to purchase.created_at.strftime('%Y年%m月%d日 %H時%M分'), admins_purchaser_path(purchase) %>
	  				</td>
	  				<td>
	  					<%= first %>　他
	  				</td>
	  				<td>
	  					合計<%= quantity %>点
	  				</td>
	  				<td>
	  					<%= namae %>
	  				</td>
	  				<td>
	  					<%= purchase.status %>
	  				</td>
	  			</tr>
	  			<% end %>
	  		</tbody>
	  	</table>
	  </div>






	</div>
  </div>
</div>


