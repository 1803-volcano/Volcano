<p>products index</p>

<div class="container">
	<div class="row">
		<div class="col-xs-2">
			sidebar
		</div>
		<div class="col-xs-10">
			<h1>商品一覧</h1>
			<table class = "table">
				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td width="100", height="100">
							<%= attachment_image_tag product, :picture, width: "100", height: "100", format: "jpeg", fallback: "img/no_image.jpg" %></td>

							<td>
							<label>CDタイトル: </label><%= link_to product.cd_title, product_path(product) %><br>

							<label>アーティスト: </label><%= product.artist %>
						</td>

						<td>￥<%= product.price %></td>

						<td>
							<span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span><br>
							お気に入りに追加
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


<%= paginate @products %>
